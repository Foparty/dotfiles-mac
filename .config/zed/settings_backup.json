{
  "relative_line_numbers": true,
  "show_edit_predictions": false,
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "enabled": true,
    // "default_model": {
    //   "provider": "copilot_chat",
    //   "model": "gpt-4o"
    //   // "model": "claude-3-5-sonnet"
    // },
    "version": "1",
    // "default_open_ai_model": "gpt-4o",
    "button": true,
    "dock": "right",
    "default_width": 640,
    "default_height": 320
  },
  "vim_mode": true,
  "autosave": "on_focus_change",
  "restore_on_startup": "last_session",
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "copilot"
    // "edit_prediction_provider": "zed"
  },
  "ui_font_size": 18,
  "agent_font_size": 22,
  "ui_font_family": "Zed Plex Mono",
  "buffer_font_size": 18,
  // "buffer_font_family": "Zed Plex Mono",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  // "buffer_font_family": "Monaspace Radon Var",
  // "buffer_font_family": "MonaspiceRn Nerd Font",
  "buffer_font_fallbacks": [
    "JetBrainsMono Nerd Font Mono"
  ],
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Iceberg"
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "active_pane_modifiers": {
    "magnification": 1,
    "inactive_opacity": 0.7
  },
  "tab_bar": {
    // change this later ------------------------------------------------
    "show": true,
    "show_nav_history_buttons": true,
    "show_tab_bar_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ensure_final_newline_on_save": false,
  "format_on_save": "on",
  // choose language_server or maybe prettier in the future? for formatter
  "formatter": "language_server",
  //research this code actioons on format
  "code_actions_on_format": {},
  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null
  },
  "languages": {
    "Markdown": {
      "enable_language_server": true,
      "ensure_final_newline_on_save": false,
      "format_on_save": "on",
      "formatter": "auto",
      "hard_tabs": false,
      "preferred_line_length": 64,
      "remove_trailing_whitespace_on_save": true,
      "show_edit_predictions": false,
      "show_whitespaces": "none",
      "soft_wrap": "preferred_line_length",
      "tab_size": 2,
      "use_autoclose": true,
      "always_treat_brackets_as_autoclosed": false
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "file_finder": {
    "modal_max_width": "xlarge"
  },
  "preferred_line_length": 500,
  "soft_wrap": "preferred_line_length",
  "tab_size": 2,
  "terminal": {
    "font_size": 18,
    "font_family": "JetBrainsMono Nerd Font",
    "button": false
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "indent_guides": true,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "never"
    },
    "indent_guides": {
      "show": "always"
    }
  },
  "outline_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": null
    }
  },
  "git_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right"
  }
}